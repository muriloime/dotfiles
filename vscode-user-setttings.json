{
  // "ruby.rubocop.executePath": "/usr/local/bin/rubocop-daemon-wrapper/",
  "ruby.useBundler": true,
  "editor.formatOnSave": true,
  "explorer.confirmDragAndDrop": false,
  "editor.formatOnSaveTimeout": 5000,
  "ruby.intellisense": "rubyLocate",
  "editor.codeLens": true,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "breadcrumbs.enabled": true,
  "terminal.integrated.shell.linux": "/bin/zsh",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "editor.fontFamily": "Menlo for Powerline",
  "explorer.confirmDelete": false,
  "workbench.sideBar.location": "right",
  "editor.tabSize": 2,
  "files.eol": "\n",
  "ruby.rubocop.suppressRubocopWarnings": true,
  "ruby.rubocop.useBundler": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "jupyter.alwaysTrustNotebooks": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "python.formatting.autopep8Args": ["--indent-size=2"],
  "git.autofetch": true,
  "jupyter.askForKernelRestart": false,
  "window.menuBarVisibility": "visible",
  "editor.inlineSuggest.enabled": true,
  "files.autoSave": "onFocusChange",
  "tailwindCSS.includeLanguages": {
    "erb": "html",
    "haml": "html"
  },
  "tailwindCSS.emmetCompletions": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "terminal.integrated.fontFamily": "Menlo for Powerline",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editor.limit.value": 5,
  "workbench.editor.limit.enabled": true,
  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
  "editor.minimap.enabled": false,
  "npm.keybindingsChangedWarningShown": true,
  "[python]": {
    "editor.formatOnType": true
  },
  "update.showReleaseNotes": false,
  "explorer.openEditors.visible": 10,
  "diffEditor.ignoreTrimWhitespace": false,
  "githubPullRequests.terminalLinksHandler": "github",
  "githubPullRequests.pullBranch": "never",
  "github.copilot.editor.enableAutoCompletions": true,
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [120],
    "editor.semanticHighlighting.enabled": true
  },
  "notebook.formatOnSave.enabled": true,
  "markdown-preview-enhanced.codeBlockTheme": "monokai.css",
  "markdown-preview-enhanced.previewTheme": "night.css",
  "notebook.editorOptionsCustomizations": {
    "editor.tabSize": 2,
    "editor.indentSize": 2
  }
}
