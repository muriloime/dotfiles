{
  // "ruby.rubocop.executePath": "/usr/local/bin/rubocop-daemon-wrapper/",
  "explorer.confirmDragAndDrop": false,
  "editor.formatOnSaveTimeout": 5000,

  "editor.codeLens": true,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.fontFamily": "Menlo for Powerline",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,

  "breadcrumbs.enabled": true,

  "terminal.integrated.defaultProfile.linux": "/bin/zsh",
  "terminal.integrated.defaultProfile.osx": "/bin/zsh",

  "files.eol": "\n",
  "window.menuBarVisibility": "visible",
  "editor.inlineSuggest.enabled": true,
  "files.autoSave": "onFocusChange",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "explorer.openEditors.visible": 10,
  "workbench.editor.limit.value": 8,
  "workbench.editor.limit.enabled": true,

  "diffEditor.ignoreTrimWhitespace": false,

  "explorer.confirmDelete": false,

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "security.workspace.trust.untrustedFiles": "open",

  "jupyter.alwaysTrustNotebooks": true,
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.ipynb": "jupyter-notebook",
    "*.svg": "default"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "python.formatting.autopep8Args": ["--indent-size=2"],
  "[python]": {
    "editor.formatOnType": true,
    "diffEditor.ignoreTrimWhitespace": false
  },
  "jupyter.askForKernelRestart": false,
  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
  "notebook.editorOptionsCustomizations": {
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true
  },
  "notebook.formatOnSave.enabled": true,

  "git.autofetch": true,

  "tailwindCSS.includeLanguages": {
    "erb": "html",
    "haml": "html"
  },
  "tailwindCSS.emmetCompletions": true,

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.minimap.enabled": false,
  "npm.keybindingsChangedWarningShown": true,
  "update.showReleaseNotes": false,

  "githubPullRequests.terminalLinksHandler": "github",
  "githubPullRequests.pullBranch": "never",

  "ruby.rubocop.suppressRubocopWarnings": true,
  "ruby.rubocop.useBundler": true,
  "ruby.useBundler": true,
  "ruby.intellisense": "rubyLocate",

  "[ruby]": {
    "editor.defaultFormatter": "rubocop.vscode-rubocop",
    "editor.codeActionsOnSave": {
      "source.fixAll.rubocop": "explicit",
      "ruby.rubocopAutocorrect": "explicit"
    },

    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [120],
    "editor.semanticHighlighting.enabled": true
  },

  "markdown-preview-enhanced.codeBlockTheme": "monokai.css",
  "markdown-preview-enhanced.previewTheme": "none.css",

  "diffEditor.maxComputationTime": 0,

  "chat.editing.alwaysSaveWithGeneratedChanges": true,

  "logViewer.watch": [
    {
      "title": "Session logs",
      "pattern": "${workspaceFolder}/**/*.log"
    }
  ],
  "workbench.panel.showLabels": false,
  "logViewer.logLevel": "info",
  "logViewer.options": {},
  "python.createEnvironment.trigger": "off",
  "terminal.integrated.fontFamily": "Menlo for Powerline",

  "explorer.openEditors.minVisible": 4,

  "workbench.editor.enablePreview": false,
  "terminal.integrated.tabs.defaultColor": "terminal.ansiRed",
  "markdown-preview-enhanced.scrollSync": false,
  "github.copilot.selectedCompletionModel": "",
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.nextEditSuggestions.enabled": false,
  "workbench.sideBar.location": "right",
  "explorer.confirmPasteNative": false,
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "chat.tools.terminal.autoApprove": {
    "python -m pytest src/tests/test_crop_on_markers.py -v": {
      "approve": true,
      "matchCommandLine": true
    },
    "python": true,
    "/dev/null": true,
    "pytest": true,
    "python3": true,
    "bin/rails": true
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  }
}
